{
  "name": "autodetect-generated-files",
  "displayName": "Autodetect Generated Files",
  "description": "Automatically marks generated files based on regex or .gitattributes.",
  "publisher": "local",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "files": [
    "out",
    "!out/test"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Autodetect Generated Files",
      "properties": {
        "autodetectGenerated.regexPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "@autogenerated",
            "Generated by"
          ],
          "description": "List of regex patterns to match in the first few lines of the file to identify it as generated."
        },
        "autodetectGenerated.gitAttributes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "generated",
            "gitlab-generated",
            "linguist-generated"
          ],
          "description": "List of .gitattributes keys to check. If a file has one of these attributes set, it is marked as generated."
        },
        "autodetectGenerated.badge": {
          "type": "string",
          "default": "G",
          "description": "The 1-2 character badge to show in the explorer."
        },
        "autodetectGenerated.color": {
          "type": "string",
          "default": "charts.yellow",
          "description": "Theme color identifier for the badge."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prek": "npm run lint && npm run format && npm run test"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
